<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#33000000" />
            <stroke
                android:color="#dd2222"
                android:width="1dp"
                android:dashGap="3dp"
                android:dashWidth="1dp"/>
            <padding
            android:bottom="20dp"
            android:left="5dp"
            android:right="5dp"
            android:top="20dp"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <solid android:color="#666666" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/ic_action_storage" />
    </item>
</layer-list>